    <div class="container">
        <div class="container intro">
            <h3>Welcome to <span style="color: yellow;">Terabyte Tech Store</span></h3>
            <img src="styles/cp.jpg" id="cp" alt="">
            <h4>Buy <span class="auto-type"></span></h4>
        </div>
        <div class="container car">
            <h3 id="sign">Sign In</h3>
            <form action="/login" method="POST">
                <div class="email">
                    <label for="email"><b>Email Address</b></label>
                    <input type="email" id="email" autocomplete="off" name="Email" required />
                </div>
                <div class="password">
                    <label for="password"><b>Password</b></label>
                    <input type="password" id="pass" name="Password" required />
                </div>
                <div class="see">
                    <input type="checkbox" onclick="toggle()" />Show Password
                </div>
                <div class="login">
                    <input type="submit" value="Login" id="login" />
                </div>
                <h4 style="text-align: center;color: red;"><%= locals.errmsg %></h4>
                <div class="account">
                    <a href="/register" style="text-decoration: none">Create Account</a>
                </div>
                <div class="forgot">
                    <a href="">Forgot Password?</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
