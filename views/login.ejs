        crossorigin="anonymous"></script>
        <script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>
    <script>
        function toggle() {
            let k = document.getElementById("pass");
            if (k.type === "password") {
                k.type = "text";
            } else {
                k.type = "password";
            }
        }
        let typed = new Typed(".auto-type",{            
        strings: ["Laptops", "Mobiles", "Tablets","All Accessories"],
        typeSpeed : 150,
        backSpeed:50,
        loop:true
    })
